{
  "name": "remk-eyes-examination",
  "private": true,
  "version": "1.0.0",
  "description": "瑞尔明康眼底检查系统",
  "author": "瑞尔明康",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@element-plus/theme-chalk": "^2.2.16",
    "@primeuix/themes": "^1.2.3",
    "ant-design-vue": "^4.2.6",
    "axios": "^1.11.0",
    "cropperjs": "^1.6.1",
    "crypto-js": "^4.2.0",
    "element-plus": "^2.11.1",
    "fabric": "^5.3.0",
    "konva": "^9.2.0",
    "pinia": "^3.0.3",
    "primevue": "^4.3.8",
    "recordrtc": "^5.6.2",
    "vue": "^3.2.37",
    "vue-konva": "^3.0.2",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.1",
    "unplugin-auto-import": "^20.1.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.remk.eyes.examination",
    "productName": "瑞尔明康眼底检查系统",
    "copyright": "Copyright © 2025 瑞尔明康",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.medical"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Medical"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
